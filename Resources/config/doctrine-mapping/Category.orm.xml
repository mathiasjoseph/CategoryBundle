<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Miky\Bundle\CategoryBundle\Model\Category">

        <field name="position" type="integer" column="position" nullable="true"/>
        <field name="asCategoryGroup" type="boolean" column="asCategoryGroup" nullable="true"/>
        <field name="name" type="string" column="name" length="180" />
        <field name="slug" type="string" column="slug" length="180" nullable="true"/>
        <field name="icon" type="string" column="icon" length="80" nullable="true"/>
        <field name="description"  column="description" type="text" nullable="true" />

    </mapped-superclass>

</doctrine-mapping>